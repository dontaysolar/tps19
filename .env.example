# TPS19 Environment Variables Template
# Copy this to .env and fill in your values

# Exchange API Keys (Crypto.com)
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Database Configuration
DATABASE_URL=sqlite:///data/tps19.db
# For PostgreSQL (Railway/Render):
# DATABASE_URL=postgresql://user:password@host:5432/database

# Redis Configuration (Optional)
# Option A: Single URL
REDIS_URL=redis://localhost:6379/0
# Option B: Individual settings (override URL if set)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password

# Google Sheets Integration (Optional)
GOOGLE_SHEETS_CREDENTIALS_PATH=/opt/tps19/config/google_credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Trading Configuration
TPS19_ENV=production
MAX_POSITION_SIZE=1000
RISK_LEVEL=moderate
TRADING_ENABLED=true
PORTFOLIO_VALUE=100

# AI/ML Configuration
ENABLE_LSTM_PREDICTION=true
ENABLE_GAN_SIMULATION=false
ENABLE_SELF_LEARNING=true

# Real-time Feeds (Optional)
WEBSOCKET_URL=

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
