# TPS19 Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# System Configuration
TPS19_HOME=/opt/tps19
TPS19_ENV=simulation  # simulation, predeployment, production
TPS19_DEBUG=false

# Database Configuration
TPS19_DB_PATH=/opt/tps19/data/databases
TPS19_BACKUP_INTERVAL=3600

# Exchange API Keys (Crypto.com)
CRYPTO_COM_API_KEY=your_api_key_here
CRYPTO_COM_API_SECRET=your_api_secret_here
CRYPTO_COM_API_PASSPHRASE=your_passphrase_here

# N8N Configuration
N8N_URL=http://localhost:5678
N8N_WEBHOOK_AUTH_TOKEN=your_webhook_auth_token

# Market Data API
COINGECKO_API_KEY=  # Optional - for pro tier

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Risk Management
MAX_POSITION_SIZE=0.1      # 10% of portfolio
MAX_DAILY_LOSS=0.05        # 5% max daily loss
RISK_PER_TRADE=0.02        # 2% risk per trade

# Trading Parameters
DEFAULT_TRADING_PAIR=BTC/USD
STARTING_BALANCE=10000     # For simulation mode

# Logging
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/opt/tps19/logs/system.log
LOG_MAX_SIZE=10485760      # 10MB
LOG_BACKUP_COUNT=5
