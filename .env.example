# TPS19 Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Database
DATABASE_URL=sqlite:///data/tps19.db
# For PostgreSQL: postgresql://user:password@localhost:5432/tps19
REDIS_URL=redis://localhost:6379/0

# Crypto.com API (https://exchange-docs.crypto.com/spot/index.html)
CRYPTO_COM_API_KEY=your_api_key_here
CRYPTO_COM_API_SECRET=your_api_secret_here
CRYPTO_COM_API_URL=https://api.crypto.com/v2

# N8N Configuration
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key

# Trading Configuration
DEFAULT_QUOTE_CURRENCY=USDT
MAX_POSITION_SIZE_PERCENT=10
DEFAULT_STOP_LOSS_PERCENT=2
DEFAULT_TAKE_PROFIT_PERCENT=5

# Risk Management
MAX_DAILY_LOSS_PERCENT=5
MAX_OPEN_POSITIONS=5
MIN_TRADE_AMOUNT_USDT=10

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=alerts@yourdomain.com